

<h2> Board : <%= @board.name %> </h2>


<hr>


<table class="table">
	<thead>
		<tr><td> id</td>
		<td> name </td>
		<td> action </td>
		</tr>
	</thead>
	
	<tbody>
		

<% @posts.each do |post|%>
<tr>
	<td> <%= post.id %> </td>
	<td> <%= link_to(post.title, board_post_path(@board,post))%> </td>
	<td> <%= link_to("edit", edit_board_post_path(@board,post))%> | 
		<%= link_to("delete",board_post_path(post), :method => :delete )%> </td>
</tr>
<% end %>
</tbody>
</table>

<%= link_to("New Post", new_board_post_path(@board), :class => "btn btn-success")%> | 
